{
    "dataset_reader": {
      "type": "target_dataset"
    },
    "train_data_path": "tests/test_data/target_reader_data.json",
    "validation_data_path": "tests/test_data/target_reader_data.json",
    "model": {
      "type": "attention_target_classifier",
      "text_field_embedder": {
        "token_embedders": {
            "tokens": {
                "type": "embedding",
                "embedding_dim": 15,
                "trainable": false
            }
            
        }
      },
      "target_field_embedder": {
        "token_embedders": {
            "tokens": {
                "type": "embedding",
                "embedding_dim": 10,
                "trainable": false
            }
            
        }
      },
      "text_encoder": {
        "type": "lstm",
        "bidirectional": false,
        "input_size": 15,
        "hidden_size": 20,
        "num_layers": 1
      },
      "target_encoder": {
        "type": "boe",
        "embedding_dim": 10,
        "averaged": true
      },
      "target_concat_text_embedding": false
    },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [["text", "num_tokens"]],
      "padding_noise": 0.0,
      "batch_size": 32
    },
  
    "trainer": {
        "num_epochs": 2,
        "cuda_device": -1,
        "grad_clipping": 5.0,
        "validation_metric": "+accuracy",
        "optimizer": {
          "type": "adagrad"
        }
    }
  }