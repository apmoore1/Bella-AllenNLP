{
    "dataset_reader": {
      "type": "tdlstm_dataset",
      "incl_target": false
    },
    "train_data_path": "/home/andrew/.Bella/Datasets/Restaurant Train",
    "validation_data_path": "/home/andrew/.Bella/Datasets/Restaurant Dev",
    "model": {
      "type": "tdlstm_classifier",
      "text_field_embedder": {
        "token_embedders": {
            "tokens": {
                "type": "embedding",
                "embedding_dim": 300,
                "pretrained_file": "/home/andrew/glove.6B/glove.6B.300d.txt",
                "trainable": true
            }
            
        }
      },
      "left_text_encoder": {
        "type": "lstm",
        "bidirectional": false,
        "input_size": 600,
        "hidden_size": 600,
        "num_layers": 1
      },
      "right_text_encoder": {
        "type": "lstm",
        "bidirectional": false,
        "input_size": 600,
        "hidden_size": 600,
        "num_layers": 1
      },
      "target_encoder": {
        "type": "boe",
        "embedding_dim": 300,
        "averaged": true
      },
      "classifier_feedforward": {
        "input_dim": 1200,
        "num_layers": 1,
        "hidden_dims": 3,
        "activations": ["linear"]
      }
    },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [["left_text", "num_tokens"], ["right_text", "num_tokens"]],
      "padding_noise": 0.1,
      "batch_size": 32
    },
  
    "trainer": {
      "num_epochs": 20,
      "patience": 3,
      "cuda_device": -1,
      "shuffle": true,
      "grad_clipping": 5.0,
      "optimizer": {
        "type": "adam"
      }
    }
  }