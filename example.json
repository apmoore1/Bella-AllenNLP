{
    "dataset_reader": {
      "type": "target_dataset"
    },
    "train_data_path": "/home/andrew/.Bella/Datasets/Restaurant Train",
    "validation_data_path": "/home/andrew/.Bella/Datasets/Restaurant Dev",
    "model": {
      "type": "target_classifier",
      "text_field_embedder": {
        "token_embedders": {
          "tokens": {
            "type": "embedding",
            "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
            "embedding_dim": 100,
            "trainable": true
          }
        }
      },
      "text_encoder": {
        "type": "lstm",
        "bidirectional": true,
        "input_size": 100,
        "hidden_size": 100,
        "num_layers": 1,
        "dropout": 0.2
      },
      "target_encoder": {
        "type": "lstm",
        "bidirectional": true,
        "input_size": 100,
        "hidden_size": 50,
        "num_layers": 1,
        "dropout": 0.2
      },
      "classifier_feedforward": {
        "input_dim": 300,
        "num_layers": 1,
        "hidden_dims": 3,
        "activations": "linear",
        "dropout": 0.2
      }
    },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [["text", "num_tokens"], ["target", "num_tokens"]],
      "batch_size": 64
    },
    "trainer": {
      "num_epochs": 40,
      "patience": 10,
      "cuda_device": -1,
      "grad_clipping": 5.0,
      "validation_metric": "+accuracy",
      "optimizer": {
        "type": "adam"
      }
    }
  }