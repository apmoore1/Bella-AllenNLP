{
    "dataset_reader": {
      "type": "tdlstm_dataset",
      "incl_target": true
    },
    "train_data_path": "/home/andrew/.Bella/Datasets/Restaurant Train",
    "validation_data_path": "/home/andrew/.Bella/Datasets/Restaurant Dev",
    "test_data_path": "/home/andrew/.Bella/Datasets/Restaurant Test",
    "evaluate_on_test": true,
    "model": {
      "type": "tdlstm_classifier",
      "text_field_embedder": {
        "token_embedders": {
            "tokens": {
                "type": "embedding",
                "embedding_dim": 300,
                "pretrained_file": "/home/andrew/glove.6B/glove.840B.300d.txt",
                "trainable": true
            }
            
        }
      },
      "left_text_encoder": {
        "type": "lstm",
        "bidirectional": false,
        "input_size": 300,
        "hidden_size": 300,
        "num_layers": 1
      },
      "right_text_encoder": {
        "type": "lstm",
        "bidirectional": false,
        "input_size": 300,
        "hidden_size": 300,
        "num_layers": 1
      },
    "dropout": 0.2,
    "word_dropout": 0.2
    },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [["left_text", "num_tokens"], ["right_text", "num_tokens"]],
      "padding_noise": 0.1,
      "batch_size": 32
    },
  
    "trainer": {
      "num_epochs": 100,
      "patience": 5,
      "cuda_device": -1,
      "shuffle": true,
      "grad_clipping": 5.0,
      "optimizer": {
        "type": "adam",
        "lr": 0.001
      }
    }
  }