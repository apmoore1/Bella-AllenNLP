{
    "dataset_reader": {
      "type": "sentence_target_dataset",
      "token_indexers": {
        "tokens": {
            "type": "single_id",
            "lowercase_tokens": true
        }
      }
    },
    "train_data_path": "/home/andrew/.Bella/Datasets/Restaurant Train Group",
    "validation_data_path": "/home/andrew/.Bella/Datasets/Restaurant Val Group",
    "test_data_path": "/home/andrew/.Bella/Datasets/Restaurant Test Group",
    "evaluate_on_test": true,
    "model": {
      "type": "attention_multi_target_classifier",
        "text_field_embedder": {
          "token_embedders": {
              "tokens": {
                "embedding_dim": 300,
                "pretrained_file": "/home/andrew/glove.6B/glove.840B.300d.txt",
                "trainable": true
              }
              
          }
      },
      "target_field_embedder": {
        "token_embedders": {
            "tokens": {
                "type": "embedding",
                "embedding_dim": 300,
                "pretrained_file": "/home/andrew/glove.6B/glove.840B.300d.txt",
                "trainable": true
            }
            
        }
      },
      "text_encoder": {
        "type": "gru",
        "bidirectional": true,
        "input_size": 300,
        "hidden_size": 200,
        "num_layers": 1
      },
      "target_encoder": {
        "type": "gru",
        "bidirectional": true,
        "input_size": 300,
        "hidden_size": 200,
        "num_layers": 1
      },
      "regularizer": [[".*", {"type": "l2", "alpha": 0.0001}]],
      "dropout": 0.0,
      "variational_dropout": 0.0
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["text", "num_tokens"]],
        "padding_noise": 0.1,
        "batch_size": 32
      },
    
    "trainer": {
      "num_epochs": 200,
      "patience": 10,
      "cuda_device": -1,
      "shuffle": true,
      "optimizer": {
          "type": "adam"
      }
    }
